---
import Testimonial from "./Testimonial.astro";
import { clients, testimonials } from "../store/data";
---

<div class="max-w-[1400px] mx-auto px-[5vw] font-text mb-20">
  <h2 class="text-purple font-heading font-bold text-5xl text-center mt-20">
    Our Clients
  </h2>
  <p class="text-black text-center mt-2 font-text text-lg font-semibold">
    Meet Our Happy Clients
  </p>
  <div class="flex gap-3 mx-auto p-5 w-full md:w-[70%] mt-10">
    <span
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z"
        ></path>
      </svg>
    </span>
    <p class="text-black text-left md:text-center font-text">
      Click the logos to see how our valued clients are using our visuals on
      their web pages.
    </p>
  </div>
  <div class="grid grid-cols-2 md:grid-cols-6 bg-gray-300">
    {
      clients.map((data) =>
        data.webLink ? (
          <a
            class="w-full h-full relative flex   border-r-[.5pt] border-b-[.5pt]  oveflow-hidden animated justify-center items-center p-10"
            href={`${data.webLink}`}
            target="_blank"
          >
            <div class="">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2.5"
                stroke="currentColor"
                class="absolute top-1 right-1 w-4 h-4 text-white"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"
                />
              </svg>

              <img src={data.logo} alt="" />
            </div>
          </a>
        ) : (
          <div class=" border-r-[.5pt] border-b-[.5pt] flex animated justify-center items-center p-10">
            <img src={data.logo} alt="" />
          </div>
        )
      )
    }
  </div>

  <Testimonial>
    <p class="text-right pt-5 font-bold" slot="author">
      {testimonials[0].user}
    </p>
    <p class="font-text text-lg tracking-wide relative" slot="content">
      {testimonials[0].review}
    </p>
  </Testimonial>
</div>
